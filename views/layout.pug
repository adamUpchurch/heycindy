doctype html

html
  head
    title= title
    link(rel='stylesheet', href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T", crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head

  body
    nav.navbar.navbar-dark.bg-dark
      div.container
          if isAuthenticated
            a.navbar-brand(href="/dashboard") Hey Cindy!
          unless isAuthenticated
            a.navbar-brand(href="/") Hey Cindy!
          div
            unless isAuthenticated
              unless isLoginPage
                a.btn.btn-outline-light.my-2.my-sm-0.btn-sm(href="/login") Login
              unless isRegistrationPage
                unless isHomePage
                  a.btn.btn-outline-light.my-2.my-sm-0.btn-sm(href="/Register") Register
            if isAuthenticated
              form(method='POST' action='/logout')
                button.btn.btn-outline-secondary.col.my-2.my-sm-0.btn-sm(type="submit") Logout
              
    div.container
      block content

    block scripts
