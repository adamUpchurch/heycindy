extends layout

block content
  h1 Register
  form(method='POST' action='').container
    div.col-6
      .form-group.row.container
        input#name.form-control(type='text', name='first_name', placeholder='first', required='true')
        input#name.form-control(type='text', name='family_name', placeholder='last', required='true')
        input#name.form-control(type='text', name='email', placeholder='email', required='true')
        input#name.form-control(type='password', name='password', placeholder='password', required='true')
      button.btn.btn-primary(type='submit') sign up
    if errors
      ul
          for error in errors
              li!= error.msg